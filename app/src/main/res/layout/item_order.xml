<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/bg_white_6"
        android:padding="@dimen/common_dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="@dimen/common_dp"
        android:layout_marginRight="@dimen/common_dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_order_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单编号: 4210609378800638"
            android:textColor="@color/c999999"
            android:textSize="@dimen/sp_14"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_order_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="待付款"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/common_red"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/riv_order_pic"
            android:layout_width="75dp"
            android:layout_height="75dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="@dimen/dp_16"
            app:layout_constraintTop_toBottomOf="@+id/tv_order_num"
            android:src="@mipmap/app_icon"
            app:riv_corner_radius="6dp"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="美的（Midea）电风扇落地扇标准版"
            android:maxLines="2"
            android:textSize="@dimen/sp_14"
            android:textColor="#444444"
            app:layout_constraintLeft_toRightOf="@+id/riv_order_pic"
            app:layout_constraintTop_toTopOf="@+id/riv_order_pic"
            android:layout_marginLeft="@dimen/common_dp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_order_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥180.00"
            android:textColor="@color/c333333"
            android:textSize="@dimen/sp_18"
            android:layout_marginTop="@dimen/dp_16"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_order_type"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="颜色分类：白色"
            android:textSize="@dimen/sp_14"
            android:textColor="#999999"
            android:padding="2dp"
            android:background="@drawable/bg_grey_2"
            app:layout_constraintBottom_toBottomOf="@+id/riv_order_pic"
            app:layout_constraintLeft_toRightOf="@+id/riv_order_pic"
            android:layout_marginLeft="@dimen/common_dp"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="共一件"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_order_price"
            android:layout_marginTop="5dp"
            android:textColor="@color/c999999"
            android:textSize="@dimen/sp_12"
            android:layout_marginRight="@dimen/dp_16"/>

        <!--"全部","待付款","待发货","待收货","已完成"-->
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_4"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="去支付"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/common_red"
            android:background="@drawable/btn_border_red_15"
            android:paddingLeft="@dimen/dp_20"
            android:paddingRight="@dimen/dp_20"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"/>




    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>