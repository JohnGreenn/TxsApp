<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="108dp"
        android:background="@color/white">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_sub_check"
            style="@style/Widget.AppCompat.CompoundButton.RadioButton"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="@dimen/common_dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/cart_check_unsel"/>

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/iv_good"
            android:layout_width="76dp"
            android:layout_height="76dp"
            android:scaleType="fitCenter"
            app:riv_corner_radius="6dp"
            android:background="@drawable/bg_empty_fit"
            android:layout_marginLeft="@dimen/common_dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/tv_sub_check"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="德国LANSAM电吹风机自营发型师理"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/c333333"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@+id/iv_good"
            app:layout_constraintTop_toTopOf="@+id/iv_good"
            android:layout_marginLeft="@dimen/common_dp"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="绿色"
            android:textColor="#666666"
            android:textSize="@dimen/txt_common_sp"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/common_dp"
            app:layout_constraintLeft_toRightOf="@+id/iv_good"
            app:layout_constraintTop_toTopOf="@+id/iv_good"
            app:layout_constraintBottom_toBottomOf="@+id/iv_good"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_sub_rmb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥"
            android:textSize="@dimen/sp_10"
            android:textColor="@color/common_red"
            app:layout_constraintLeft_toRightOf="@+id/iv_good"
            app:layout_constraintBottom_toBottomOf="@+id/iv_good"
            android:layout_marginLeft="@dimen/common_dp"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_sub_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="180.00"
            android:textSize="@dimen/sp_18"
            android:textColor="@color/common_red"
            app:layout_constraintLeft_toRightOf="@+id/tv_sub_rmb"
            app:layout_constraintBottom_toBottomOf="@+id/iv_good" />

        <LinearLayout
            android:id="@+id/view_number"
            android:layout_width="74dp"
            android:layout_height="23dp"
            android:background="@drawable/btn_cart_border_addordel"
            android:divider="@drawable/cart_btn_divide_line"
            android:orientation="horizontal"
            android:showDividers="middle"
            app:layout_constraintBottom_toBottomOf="@id/iv_good"
            app:layout_constraintRight_toRightOf="parent">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_reduce"
                android:layout_width="27dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="—"
                android:textColor="#C9C9C9"
                android:textSize="15sp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_num"
                android:layout_width="21dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:singleLine="true"
                android:text='12'
                android:textColor="#666666"
                android:textSize="14sp" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_add"
                android:layout_width="27dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="+"
                android:textColor="#C9C9C9"
                android:textSize="15sp" />
        </LinearLayout>





    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>