<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="258dp"
        android:background="@drawable/bg_white_6"
        android:padding="@dimen/common_dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="@dimen/common_dp"
        android:layout_marginRight="@dimen/common_dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_order_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单编号: 4210609378800638"
            android:textColor="@color/c999999"
            android:textSize="@dimen/sp_14"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_order_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="换货"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/c333333"
            android:drawableLeft="@drawable/after_sales_exchanges_ico"
            android:drawablePadding="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/riv_order_pic"
            android:layout_width="75dp"
            android:layout_height="75dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="@dimen/dp_16"
            app:layout_constraintTop_toBottomOf="@+id/tv_order_num"
            android:src="@mipmap/app_icon"
            app:riv_corner_radius="6dp"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="美的（Midea）电风扇落地扇标准版美的（Midea）电风扇落地扇标准版"
            android:maxLines="2"
            android:textSize="@dimen/sp_14"
            android:textColor="#444444"
            app:layout_constraintLeft_toRightOf="@+id/riv_order_pic"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_weight="1"
            android:layout_marginRight="@dimen/common_dp"
            app:layout_constraintTop_toTopOf="@+id/riv_order_pic"
            android:layout_marginLeft="@dimen/common_dp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="申请数量：1"
            android:textSize="@dimen/sp_14"
            android:textColor="#999999"
            android:padding="2dp"
            app:layout_constraintBottom_toBottomOf="@+id/riv_order_pic"
            app:layout_constraintLeft_toRightOf="@+id/riv_order_pic"
            android:layout_marginLeft="@dimen/common_dp"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="53dp"
            app:layout_constraintTop_toBottomOf="@+id/riv_order_pic"
            android:background="@drawable/bg_grey_6"
            android:layout_marginTop="@dimen/dp_16">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_after_ing_wait"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="待审核"
                android:textColor="@color/c333333"
                android:textSize="@dimen/sp_12"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="@dimen/common_dp"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@+id/tv_after_ing_wait"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/iv_after_enter"
                android:text="您的服务单已申请成功，待售后审核中客服会尽快为您审核您的服务单已"
                android:layout_marginRight="70dp"
                android:textSize="@dimen/sp_10"
                android:textColor="#444444"
                android:maxLines="2"
                android:layout_marginLeft="@dimen/common_dp"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_after_enter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/enter_icon"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="@dimen/common_dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!--"全部","待付款","待发货","待收货","已完成"-->
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_4"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="取消申请"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/c333333"
            android:background="@drawable/btn_border_14"
            android:paddingLeft="@dimen/dp_20"
            android:paddingRight="@dimen/dp_20"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>