<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="fragment"
            type="com.hpkj.txsapp.ui.fragment.HomeFragment" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.youth.banner.Banner
                    android:id="@+id/home_banner"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:background="@null"
                    app:layout_collapseMode="parallax"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginLeft="@dimen/common_dp"
                    android:layout_marginRight="@dimen/common_dp"
                    android:layout_marginTop="@dimen/common_dp"
                    app:banner_radius="6dp"/>

                <!--第一行-->
                <LinearLayout
                    android:id="@+id/ll_bigicon"
                    android:layout_width="match_parent"
                    android:layout_height="85dp"
                    android:layout_marginTop="20dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ll_item1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            style="@style/home_top_icon_style"
                            android:background="@drawable/home_top_icon1" />

                        <androidx.appcompat.widget.AppCompatTextView
                            style="@style/home_top_text"
                            android:text="轻奢" />

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/ll_band"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            style="@style/home_top_icon_style"
                            android:background="@drawable/home_top_icon2" />

                        <androidx.appcompat.widget.AppCompatTextView
                            style="@style/home_top_text"
                            android:text="家用电器"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_hy"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            style="@style/home_top_icon_style"
                            android:background="@drawable/home_top_icon3" />

                        <androidx.appcompat.widget.AppCompatTextView
                            style="@style/home_top_text"
                            android:text="智能家电" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_all_goods"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            style="@style/home_top_icon_style"
                            android:background="@drawable/home_top_icon4" />

                        <androidx.appcompat.widget.AppCompatTextView
                            style="@style/home_top_text"
                            android:text="美妆个护" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/txt_text"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            style="@style/home_top_icon_style"
                            android:background="@drawable/home_top_icon5" />

                        <androidx.appcompat.widget.AppCompatTextView
                            style="@style/home_top_text"
                            android:text="全球精选" />

                    </LinearLayout>

                </LinearLayout>


                <!--第二行-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="85dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:tag="4">

                        <ImageView
                            style="@style/home_top_icon_style"
                            android:background="@drawable/home_top_icon6" />

                        <androidx.appcompat.widget.AppCompatTextView
                            style="@style/home_top_text"
                            android:text="母婴" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:tag="2">

                        <ImageView
                            style="@style/home_top_icon_style"
                            android:background="@drawable/home_top_icon7" />

                        <androidx.appcompat.widget.AppCompatTextView
                            style="@style/home_top_text"
                            android:text="精选箱包" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:tag="1"
                        android:orientation="vertical">
                        <!--                app:clickview="@{(view)->fragment.kqClick(view)}"-->

                        <ImageView
                            style="@style/home_top_icon_style"
                            android:background="@drawable/home_top_icon8" />

                        <androidx.appcompat.widget.AppCompatTextView
                            style="@style/home_top_text"
                            android:text="健康养生" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:tag="3"
                        >
                        <!--                app:clickview="@{(view)->fragment.kqClick(view)}"-->

                        <ImageView
                            style="@style/home_top_icon_style"
                            android:background="@drawable/home_top_icon9" />

                        <androidx.appcompat.widget.AppCompatTextView
                            style="@style/home_top_text"
                            android:text="酒水饮料" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            style="@style/home_top_icon_style"
                            android:background="@drawable/home_top_icon10" />

                        <androidx.appcompat.widget.AppCompatTextView
                            style="@style/home_top_text"
                            android:text="全部商品" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

    </FrameLayout>


</layout>